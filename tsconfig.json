{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "#/*": ["./resources/scripts/*"],
            "@/*": ["./lang/*"],
            "~/shared/*": ["./resources/scripts/shared/*"],
            "~/admin/*": ["./resources/scripts/admin/*"],
            "~/user/*": ["./resources/scripts/user/*"]
        },
        "types": ["vite/client"]
    },
    "include": ["resources/**/*.ts", "resources/**/*.d.ts", "resources/**/*.vue"],
    "exclude": ["node_modules", "dist"]
}
